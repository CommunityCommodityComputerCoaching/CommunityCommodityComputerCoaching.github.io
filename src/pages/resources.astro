---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Resources">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Resources</Fragment>
      <Fragment slot="desc">Explore our helpful resources.</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-8 mt-16">
      <section id="donate">
        <h2 class="font-bold text-2xl text-gray-800">Donate</h2>
        <div>
          <p>
            Your donations help us provide technology and training to those in
            need.
          </p>
          <a href="/contact">Contact us to donate</a>
        </div>
      </section>

      <section id="faq">
        <h2 class="font-bold text-2xl text-gray-800">FAQ</h2>
        <div>
          <p>Frequently Asked Questions</p>
          <ul>
            <li>
              <b>What do you do?</b> We provide technology and training to
              nonprofits and individuals.
            </li>
            <li>
              <b>How can I get involved?</b> Contact us to volunteer or donate.
            </li>
          </ul>
        </div>
      </section>

      <section id="internships">
        <h2 class="font-bold text-2xl text-gray-800">Internships</h2>
        <div>
          <p>
            We offer internships for students interested in technology and
            nonprofits.
          </p>
          <a href="/contact">Contact us to apply</a>
        </div>
      </section>

      <section id="documentation">
        <h2 class="font-bold text-2xl text-gray-800">Documentation</h2>
        <div>
          <p>
            Here you will find documentation on how to use our services and
            products.
          </p>
          <a href="/contact">Contact us for support</a>
        </div>
      </section>
    </div>
  </Container>
</Layout>
