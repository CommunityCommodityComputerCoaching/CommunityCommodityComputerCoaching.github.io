---
import Layout from "@layouts/Layout.astro"
import Hero from "@components/hero.astro"
---
<Layout title="Donations">
    <section class="py-12 md:py-16 bg-white">
        <div class="container-custom">
          <div class="max-w-3xl mx-auto text-center mb-12">
            <h2 class="text-3xl font-bold mb-6">Make a Difference Today</h2>
            <p class="text-lg text-gray-700">
              Your generous contribution supports our work providing technology access, 
              education, and resources to underserved communities. Every donation helps 
              us bridge the digital divide.
            </p>
          </div>

        <div class="flex flex-col md:flex-row gap-8 mt-8 mb-16">
            <div class="md:w-1/2 p-6 rounded-lg bg-c4blue-50 flex flex-col items-center">
              <div class="bg-c4blue rounded-full p-4 mb-4">
                <!-- <HandCoins class="h-8 w-8 text-white" /> -->
              </div>
              <h3 class="text-xl font-bold mb-3 text-c4blue-500">Your Impact</h3>
              <p class="text-center">
                Every donation directly supports our programs providing technology 
                access and education to communities in need. Your generosity helps us:
              </p>
              <ul class="mt-4 space-y-2 text-left w-full">
                <li class="flex items-start">
                  <span class="bg-c4blue-300 rounded-full p-1 mr-2 mt-1">
                    <!-- <PiggyBank class="h-4 w-4 text-white" /> -->
                  </span>
                  <span>Provide Chromebooks to students without home computers</span>
                </li>
                <li class="flex items-start">
                  <span class="bg-c4blue-300 rounded-full p-1 mr-2 mt-1">
                    <!-- <PiggyBank class="h-4 w-4 text-white" /> -->
                  </span>
                  <span>Train community members in essential digital skills</span>
                </li>
                <li class="flex items-start">
                  <span class="bg-c4blue-300 rounded-full p-1 mr-2 mt-1">
                    <!-- <PiggyBank class="h-4 w-4 text-white" /> -->
                  </span>
                  <span>Support technical assistance programs for seniors</span>
                </li>
              </ul>

             <div class="md:w-1/2 bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
              <h3 class="text-2xl font-bold mb-6 text-center">Donate Now</h3>
              <!-- <DonationForm /> -->
            </div>
          </div>

          <div class="section-divider"></div>            

        <div class="mt-12 text-center">
            <h3 class="text-2xl font-bold mb-6">Other Ways to Support</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div class="p-6 bg-c4blue-50 rounded-lg">
                <div class="flex justify-center mb-4">
                  <!-- <CreditCard class="h-10 w-10 text-c4blue" /> -->
                </div>
                <h4 class="text-xl font-semibold mb-3">Monthly Giving</h4>
                <p>Become a sustaining supporter with a recurring monthly donation.</p>
              </div>
              
              <div class="p-6 bg-c4blue-50 rounded-lg">
                <div class="flex justify-center mb-4">
                  <!-- <PiggyBank class="h-10 w-10 text-c4blue" /> -->
                </div>
                <h4 class="text-xl font-semibold mb-3">Corporate Matching</h4>
                <p>Double your impact through your employer's matching gift program.</p>
              </div>
              
              <div class="p-6 bg-c4blue-50 rounded-lg">
                <div class="flex justify-center mb-4">
                  <!-- <HandCoins class="h-10 w-10 text-c4blue" /> -->
                </div>
                <h4 class="text-xl font-semibold mb-3">Device Donation</h4>
                <p>Donate your used devices to help others gain digital access.</p>
              </div>
            </div>
          </div>
        </div>

        </div>
    </section>
</Layout>