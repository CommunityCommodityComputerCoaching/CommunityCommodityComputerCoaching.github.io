---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import PricingCard from "@components/pricing.astro";
import { Picture } from "astro:assets";
import heroImage from "assets/rental_logo.png";
import "../styles/training.css";

const pricing = [
  {
    name: "Chromebook Devices",
    //price: "$275.00 - $375.00",
    popular: false,
    features: [
      "i5 and i3 Processors in Stock",
      "8G-16G Memory",
      "Updated and Secure",
      "Long Term Support Included",
      "$275.00 - $375.00"
    ],
    button: {
      text: "Learn More",
      link: "/resources",
    },
  },
  {
    name: "Device Rental",
   // price: " ",
    popular: true,
    features: [
      "1 to 10 Devices   -  $25/day donation",
      "10 to 25 Devices  -  $23/day donation",
      "25 to 50 Devices  -  $20/day donation",
      "50+ Devices       -  Contact Us for Pricing",
    ],
    button: {
      text: "Get a quote",
      link: "/forms",
    },
  },
  {
    name: "Community Coaching Events",
  //  price: "Custom",
    popular: false,
    features: [
      "Technologies To Boost Your Business",
      "Training for your situation and needs",
      "Held at the Venue of Your Choice",
      "20+ Years Experience",
    ],
    button: {
      text: "Learn More",
      link: "/training",
    },
  },
];
---

<Layout title="Services">
  <Container>
    <main class="w-full">
      <section class="hero-section w-full flex flex-col justify-center items-center text-center">
        <div class="white-overlay">
          <div class="content-container">
            <h2>Our Services.</h2>
            <p>Explore our services.</p>
          </div>
        </div>
      </section>

      <h3 class="info-blurb">Device Rentals</h3>
      <hr class="separator" />

      <div class="image-box-left">
        <Picture class="hero-image-right" src={heroImage} alt="Rental image" />
        <div class="training-blurb-right">
          <p class="category-title">
            Renting Chromebooks for Nonprofits
          </p>
          <br />
          <p class="category-blurb">
            Renting Chromebooks offers a cost-effective and flexible solution
            for nonprofits needing devices for events. We handle maintenance,
            provide up-to-date technology, and eliminate storage concerns.
          </p>
          <br />
          <p class="category-blurb">
            Key advantages include:
          </p>
          <ul class="list-disc pl-5 mt-2 text-lg leading-relaxed text-slate-500">
            <li>
              <b>Cost-Effectiveness:</b> Ideal for short-term needs, avoiding
              large upfront costs.
            </li>
            <li>
              <b>Flexibility:</b> Rent the exact number of devices needed for
              each event.
            </li>
            <li>
              <b>Maintenance & Support:</b> We manage all maintenance and
              troubleshooting.
            </li>
            <li>
              <b>Up-to-Date Technology:</b> Access to the latest Chromebook
              models.
            </li>
            <li>
              <b>No Storage Concerns:</b> Eliminate the need to store and
              secure devices.
            </li>
          </ul>
          <p class="category-blurb">
            Contact us to discuss your specific needs and receive a customized
            rental plan.
          </p>
          <div class="button-container">
            <a href="/contact" class="button-link">
              <button>Get a Quote</button>
            </a>
          </div>
        </div>
      </div>

     <!--- <h3 class="info-blurb">Pricing</h3>
      <hr class="separator" /> --->

     /* <section id="pricing">
        <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
          {pricing.map((item) => <PricingCard plan={item} />)}
        </div>
      </section> */
    </main>
  </Container>
</Layout>
